# =============================================
# CONFIGURACIÓN FLASK
# =============================================
# Nombre del archivo de inicio de la aplicación
FLASK_APP=app.py

# Entorno de ejecución (development, production)
FLASK_ENV=development

# Activa el modo de depuración de Flask
DEBUG=True

# Clave secreta fuerte y única. ¡CAMBIA ESTE VALOR EN EL ARCHIVO .env REAL!
SECRET_KEY=TU_CLAVE_SECRETA_LARGA_Y_UNICA

# =============================================
# BASE DE DATOS - POSTGRESQL
# =============================================
# Formato: postgresql+psycopg2://<user>:<password>@<host>/<database_name>
DATABASE_URL=postgresql+psycopg2://TU_DB_USER:TU_DB_PASSWORD@TU_DB_HOST/TU_DB_NAME

# Configuración adicional PostgreSQL
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# =============================================
# SEGURIDAD
# =============================================
# Clave secreta para firmar los tokens JWT
JWT_SECRET_KEY=TU_JWT_CLAVE_SECRETA_UNICA

# Coste de la función hash para las contraseñas
BCRYPT_LOG_ROUNDS=12

# =============================================
# CONFIGURACIÓN DE LA APLICACIÓN RENTFLOW
# =============================================
APP_NAME=Rentflow
APP_VERSION=1.0.0

# Carpeta donde se guardarán los archivos subidos (debe tener permisos de escritura)
UPLOAD_FOLDER=./static/uploads

# Tamaño máximo del contenido subido en bytes (16MB = 16777216)
MAX_CONTENT_LENGTH=16777216

# Configuración de sesiones (tiempo de expiración en segundos)
SESSION_TIMEOUT=3600

# =============================================
# EMAIL (para notificaciones de reservas, pagos, etc.)
# =============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Credenciales de la cuenta de email para enviar notificaciones
EMAIL_USER=TU_EMAIL_DE_NOTIFICACIONES
EMAIL_PASSWORD=TU_CLAVE_DE_APLICACION_DE_EMAIL

# =============================================
# PAGOS (Stripe/PayPal)
# =============================================
# Reemplaza con tus claves de prueba o producción
STRIPE_PUBLIC_KEY=TU_STRIPE_PUBLIC_KEY
STRIPE_SECRET_KEY=TU_STRIPE_SECRET_KEY

# Reemplaza con tus credenciales de PayPal
PAYPAL_CLIENT_ID=TU_PAYPAL_CLIENT_ID
PAYPAL_CLIENT_SECRET=TU_PAYPAL_CLIENT_SECRET

# =============================================
# APIS EXTERNAS
# =============================================
GOOGLE_MAPS_API_KEY=TU_GOOGLE_MAPS_API_KEY

# Claves de reCAPTCHA para la verificación de usuarios
RECAPTCHA_SITE_KEY=TU_RECAPTCHA_SITE_KEY
RECAPTCHA_SECRET_KEY=TU_RECAPTCHA_SECRET_KEY

# =============================================
# CONFIGURACIÓN DEL SERVIDOR
# =============================================
SERVER_HOST=localhost
SERVER_PORT=5000